{
  "compilerOptions": {
    "target": "es2017",                                     
    "lib": ["es6"],                                        
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    
    "module": "commonjs",                                
    "rootDir": "./",                                  
    "outDir": "./dist",                                   
    "typeRoots": [
       "./node_modules/@types",
       "./src/@types"
     ],                                  
    "resolveJsonModule": true,
    "allowJs": true,                                                            
    "esModuleInterop": true,                                        
    "skipLibCheck": true                                 
  }
}
